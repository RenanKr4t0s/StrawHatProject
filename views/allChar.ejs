<body class="d-flex flex-column align-items-center w-100vw px-2 text-center">
    <div class="card mt-4 mb-4 col-12 col-md-8 align-items-center">
        <h1 class="mt-3">üè¥‚Äç‚ò†Ô∏è Personagens üè¥‚Äç‚ò†Ô∏è</h1>
        <img class="rounded my-2 mx-5 w-75 shadow-lg" src="https://i.giphy.com/media/v1.Y2lkPTc5MGI3NjExY2dmeTZlaWxqM3VuOWE3M3V6cDAwbWw2bWo3OXRhd2p5Z2QxbDFwYiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/nQDKSeRlIyfmw/giphy.gif" alt="Chap√©u de palha do Luffy em preto e branco">
        <h2>Todos os personagens:</h2>
        <div class="row justify-content-center">
            <% characters.forEach(char => { %>
                <div class="card m-4 bg-info col-10 col-md-5">
                    <img class="rounded my-2 mx-2" src=<%= char.imgUrl %> alt="<%= char.name %> image">
                    <h2></h2>
                    <div class="card-body">
                      <h5 class="card-title"><%= char.name %></h5>
                      <p class="card-text"><%= char.crew %></p>
                      <p class="card-text"><%= char.phrase %></p>
                      <% if(char.akumanomiUser){ %>
                          <p class="card-text"><%= char.akumanomi %></p>
                      <% } %>
                      <a class="btn btn-primary" href="/char/<%= char.id %>">Veja Mais</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    
</body>
